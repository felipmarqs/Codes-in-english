def are_lower(word:str, count:bool = False) -> Union[bool,int]:
'''Verifies if there are lowercase in a word
    param:
        Any word
        Count = True or False
    return:
        If count is True, returns how many lowercase letters are there
        If count is False, returns True if there are or False if there are not
        

'''
    if not count:
        for letter in word:
            if letter.islower() == True:
                return True

    cont = 0
    if count:
        for letter in word:
            if letter.islower() == True:
                cont += 1
    return cont
